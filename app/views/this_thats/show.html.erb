<%= form_for @form, as: :submission, url: submission_this_that_path(@submission), method: :put do |f| %>
  <%= render 'shared/errors', object: @form, message: 'Please select an answer for each choice' %>

  <% @questions.each do |question| %>
    <fieldset class="thumbs-up-down">
      <p>I want to...</p>
      <div class="statement">
        <p>
          <%= question[:left][:name] %>
        </p>
      </div>
      <div class="thumbs-up-down-choice">
        <input type="radio" id="thumbs-up" name="" value="">
        <label for="thumbs-up">👍</label>
        <input type="radio" id="thumbs-down" name="" value="">
        <label for="thumbs-down">👎</label>
      </div>
    </fieldset>
  <% end %>

  <!--<%= f.submit 'Next', class: 'btn btn-primary thumbs-next' %>-->
<% end %>
