
<%= form_tag submission_activities_path(@submission) do |f| %>

  <% if @ups >= @required_interests %>
    <h1>Do you have something in mind already?</h1>
    <%= label_tag :suggestion, "Is there something in your neighbourhood you'd like to change or start?" %>
  <% end %>

  <%= text_area_tag :suggestion %>
  <%= submit_tag 'Next', class: 'btn btn-primary' %>
  <%= submit_tag 'Get some ideas', class: 'btn btn-primary' %>

<% end %>
