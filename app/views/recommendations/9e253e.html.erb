  <section class="recommendation-details">
    <header>
      <img src="<%= image_path 'rodillian-runners.png' %>" alt="">
      <dl>
        <dt>Rodillian Runners</dt>
        <dd class="availability">Next run: Tuesday, 23 January at 6:30pm</dd>
      </dl>
    </header>
    <div class="location-details">
      <div class="map">
        <%= map(latitude: 53.718259, longitude: -1.479089) %>
      </div>
      <dl>
        <dt>Manley Park, Stanley Rodillians RUFC, Lee Moor Rd, Stanley, Wakefield WF3 4EF</dt>
        <dd>18 minutes by bus <a target="_blank" href="https://www.google.co.uk/maps/dir//Manley+Park,+Stanley+Rodillians+RUFC,+Lee+Moor+Road,+Stanley,+Wakefield/@53.7140303,-1.4970922,15z/data=!4m9!4m8!1m0!1m5!1m1!1s0x4879678fce491fe1:0xea1cbdcf81cd71a9!2m2!1d-1.4789352!2d53.7177489!3e3" target="_blank">Get directions</a></dd>
      </dl>
    </div>
    <section class="call-to-action">
